<!DOCTYPE html>
<html>
  <head>
    <title>Blerg</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body class="<%= controller.controller_name.dasherize %>">
    <div class="container">
      <header class="site-header clearfix">
        <nav>
          <ul class="nav nav-pills pull-xs-right">
            <% if logged_in? %>
              <li class="nav-item">
                <%= link_to 'New Post', new_post_path, :class => 'btn btn-sm btn-success nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Logout', session_path(0), :method => :delete, :class => 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Login', new_session_path, :class => 'btn btn-sm btn-primary nav-link' %>
              </li>
            <% end %>
          </ul>
        </nav>
        <h1><%= link_to 'Welcome to the Blerg Blog', root_path %></h1>
      </header>

      <% if flash.present? %>
        <div class="<%= flash_class %>"><%= flash_message %></div>
      <% end %>

      <main>
        <%= yield %>
      </main>

    </div>
  </body>
</html>
