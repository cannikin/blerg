<%= form_tag sessions_path, :class => 'login-form' do %>
  <fieldset class="form-group">
    <%= text_field_tag :email, '', :class => 'form-control', :placeholder => 'Email' %>
  </fieldset>
  <fieldset class="form-group">
    <%= password_field_tag :password, '', :class => 'form-control', :placeholder => 'Email' %>
  </fieldset>
  <%= submit_tag 'Login', :class => 'btn btn-lg btn-primary' %>
<% end %>
