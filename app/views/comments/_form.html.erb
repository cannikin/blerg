<%= form_for([comment.post, comment], :html => { :class => 'comment-form' }) do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="form-group">
    <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name (required)' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.text_field :email, :class => 'form-control', :placeholder => 'Email (optional)' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.text_area :body, :class => 'form-control', :placeholder => 'Your comment...' %>
  </fieldset>

  <div class="checkbox">
    <label>
      <%= f.check_box :notify, :class => 'form-control' %>
      Notify me of any new comments on this post (email required)
    </label>
  </div>

  <div class="actions">
    <%= f.submit 'Add Comment', :class => 'btn btn-primary' %>
  </div>
<% end %>
